    $("#addCat").click(function () {
        var parentID = $("#listofParentAdd").val();
        var brandID = "";// $("#listOfBrands").val();
        var catname = $("#listofcatAdd").val();
        if (catname == "") {
            catname = "00";
        }
        var name = $("#titleAdd").val();
        var tags = $("#tagname").val();
        var entitle = $("#entitleAdd").val();
        var priority = $("#priorityAdd").val();
        var description = tinymce.get("descAdd").getContent();
        var image = $(".imageNameAdd").text();

        if (catname != "" && name != "" && image != "" && entitle != "" && priority != "" && description != "") {


            $.post(
                '/Node/setnewcatNew',
                {
                    catID: catname,
                    brandID: '',
                    title: name,
                    entitle: entitle,
                    description: description,
                    priority: priority,
                    image: image,
                    parentID: parentID,
                    tags: tags

                },
                function (data) {
                    if (data == "1") {
                        location.reload();

                    }
                });


        }
        else {
            alert("@Resources.res.fillAllField")
        }
    })
    $("#removeButt").click(function () {
        $("#delmodal").modal('toggle');

    })
    $("#remove").click(function () {

        var catname = $("#listofcatDel").val();
        if (catname != "") {
            $.ajax({
                url: "/admin/delnewcatNew",
                dataType: "html",
                data: {
                    catid: catname,

                },
                success: function (data) {
                    if (data == "1") {
                        location.reload();

                    }
                    else {
                        $("#delmodal").modal('toggle');
                        alert(data)
                    }
                }
            })
        }
    })



    $("#listofcatEdit").change(function () {
        $("#imageHolderEdit").html('');
        var catname = $("#listofcatEdit").val();

        if (catname != "") {
            $.ajax({
                url: "/node/getCatDetail",
                dataType: "html",
                data: {
                    catid: catname,

                },
                success: function (data) {

                    var obj = JSON.parse(data);
                    var image = obj['data'][0]["image"];
                    var title = obj['data'][0]["title"];
                    var entitle = obj['data'][0]["entitle"];
                    var priority = obj['data'][0]["priority"];
                    var description = obj['data'][0]["description"];
                    var tags = obj['tags'];
                    $("#edittags option").each(function () {
                        $("#edittags").select2().val(tags).trigger("change");
                    })
                    $("#titleEdit").val(title);
                    $("#entitleEdit").val(entitle);
                    $("#priorityEdit").val(priority);

                    tinymce.get("descEdit").setContent(description)


                    if (image != null && image != "") {
                        var htmldiv = `<div id=` + image + ` class="imageCover" style="postion:relative !important; width:150px"><div><div  style="position:relative"><img src="/images/` + image + `" style="width:150px"" src="#" /> <img  onclick= deletImage("` + image + `")   " class="removeImage" src="/images/trash.png" style="position:absolute; bottom:0;top:0;left:0;right:0;margin:auto" /><div></div></div> `;
                        $("#imageHolderEdit").append(htmldiv);


                        var srt = $(".imageNameEdit").text();
                        $(".imageNameEdit").text(obj['data'][0]["image"] + "," + srt);
                    }


                }
            })
        }
    })
    var deletImage = function (name) {
        var srt = $(".imageName").text();
        srt = srt.replace(name + ",", "");
        $(".imageName").text(srt);
        $.ajax({
            url: "/admin/removeImage",
            data: {
                id: name
            },
            success: function () {
                var element = document.getElementById(name);
                element.style.display = "none";
            }
        })
    }
    $("#verifEdit").click(function () {
        var brandID = "";
        var catname = $("#listofcatEdit").val();
        var tag = $("#edittags").val();
        var name = $("#titleEdit").val();
        var enname = $("#entitleEdit").val();
        var priority = $("#priorityEdit").val();
        var desc = tinymce.get("descEdit").getContent();
        var image = $(".imageNameEdit").text();
        var br = brandID.toString();
        if (catname != "" && name != "" && image != "" && desc != "") {

          



            $.post(
                '/node/editcatNew',
                {
                    catID: catname,
                    title: name,
                    entitle: enname,
                    priority: priority,
                    image: image,
                    description: desc,
                    brandID: br,
                    tags: tag
                },
                function (data) {
                    if (data == "1") {
                        location.reload();

                    }
                });
        };
    })

    $(".ImageDelete").click(function () {

        var name = $(".imageName").text();
        $.ajax({
            url: "/admin/deleteImage",
            data: {
                id: name
            },
            success: function () {
                var srt = $(".imageName").text();
                $(".imageName2").text(srt.replace(name + ","), "");
                $("#imageHolder0").css("display", "none")
            }
        })

    });
</script>
<script>
    $(".delIcon").click(function () {
        var id = $(this).attr('id');
        var element = $(this).parent();
        $.ajax({
            url: "/admin/deleteimageDesc",
            dataType: "html",
            data: {
                title: id
            },
            success: function () {
                element.remove();
            }
        })
        var id = $(this).attr('id');

    });
    var copyContent = function (contentEl) {
        var id = $(contentEl).attr('content');
        navigator.clipboard.writeText(id);
        toastr.options = {
            "debug": false,
            "positionClass": "toast-top-center",
            "onclick": null,
            "fadeIn": 300,
            "fadeOut": 1000,
            "timeOut": 5000,
            "extendedTimeOut": 1000
        }
        toastr.success('Copied')

    };

    var removeimg = function (newel) {

        var id = newel.id;


        $.ajax({
            url: "/admin/deleteimageDesc",
            dataType: "html",
            data: {
                title: id
            },
            success: function () {
                newel.parentNode.parentNode.removeChild(newel.parentNode);
            }
        })
        var id = $(this).attr('id');
    }
</script>




