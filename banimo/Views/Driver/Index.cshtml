<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
          crossorigin="anonymous" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- local css  -->
    <link rel="stylesheet" type="text/css" href="/webAsset/deliver/app/Delivery/css/driver/index.css">
  
</head>
<body style="background-image: url('/webAsset/deliver/app/Delivery/imgs/home-bg.png')">

    <div class="container container-main">
        <div class="row">
            <div class="col">

                <div class="row d-flex justify-content-center">
                    <div class="col-lg-4 text-center">
                        <img src="/webAsset/deliver/app/Delivery/imgs/logo-brand.png" class="login-main-brand">
                        <h4>Welcome Back</h4>
                    </div>
                </div>

                <div class="row d-flex justify-content-center mt-4">
                    <div class="col-11 col-md-10 col-sm-12">
                        <section class="login-form">
                            <form id="adminSingUp" method="post" action="/Driver/CustomerLogin" class="login100-form validate-form">
                                @Html.AntiForgeryToken()
                                <div class="input-group login-input mb-3">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="bi bi-envelope-fill"></i>
                                    </span>
                                    <input name="phone" type="text"
                                           class="form-control"
                                           placeholder="Enter Email Address">
                                </div>
                                <div class="input-group login-input mb-3">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="bi bi-shield-lock-fill"></i>
                                    </span>
                                    <input name="pass" type="password"
                                           class="form-control"
                                           placeholder="Enter Password">
                                </div>

                                <a href="" class="mt-4 muted-text links forgot">
                                    Forgot your Password?
                                </a>
                                <button  class="links btn login-btn w-100 mt-4">
                                    LOGIN
                                </button>
                            </form>
                        </section>
                    </div>
                </div>

               



                <div class="row d-flex justify-content-center mt-5">
                    <div class="col">
                        <div class="d-flex justify-content-center align-items-center text-muted">
                            <small>
                                Marsool Driver App
                            </small>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>



