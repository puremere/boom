                    </div>
                </div>
                <div id="Listholder">
                    <table class="table all-package theme-table table-product dataTable no-footer" id="table_id" style="margin-top:70px">
                        <thead>
                            <tr>

                                <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 170px;">Title</th>
                                <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 170px;">Description</th>
                                <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 170px;">Price</th>
                                <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 170px;">Weight</th>
                                <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 170px;">Dimension</th>
                                <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 170px;">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.delivertypeList != null)
                            {
                                foreach (var item in Model.delivertypeList)
                                {

                                    string cls = "odd";
                                    if (Model.delivertypeList.IndexOf(item) + 1 % 2 == 0)
                                    {
                                        cls = "even";
                                    }

                                    <tr class="@cls">

                                        <td >@item.name</td>
                                        <td>
                                            @item.description
                                        </td>
                                        <td style=" ">
                                            @item.price
                                        </td>

                                        <td style="">
                                            @item.weight
                                        </td>
                                        <td style="">
                                            @item.dimension
                                        </td>




                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="javascript:void(0)">

                                                        <i id=@item.ID class="ri-delete-bin-line Dbutton"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            }




                        </tbody>
                    </table>



