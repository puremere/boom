                    </script>
                </div>



            </div>
        </div>
    </div>
</div>


<script>
    $("#addUserModalIcon").click(function () {
        $("#addUserModal").modal("toggle");
    })
    $("#addRoleModalIcon").click(function () {
        $("#addRoleModal").modal("toggle");
