            }
            else {
                $("#" + wishoffid).css("display", "none")
            }
            $("#" + compareid).click(function () {
                var id = '@Model.ID';
                var cat = '@Model.cattree'
                var url = '@Url.Action("compare", "home", new { id = "__id__", cat = "__cat__" })';
