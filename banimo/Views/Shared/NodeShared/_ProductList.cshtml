                $("#parent").text(parentName);
                $("#fileupload").click();


            })
            $("#fileupload").on('change', function () {
                //alert("sss");
                var pr = $("#parent").text();
                uploadImage(pr, "imageName", this)
            });
            $(".confirmVideo").click(function () {

                var val = $(this).attr('id');
                var image = $(".imageName").text();
                $.ajax({
                    url: "/Node/setvideo",
                    dataType: "html",
                    data: {
                        val: val,
                        image: image
                    },
                    success: function (data) {
                        window.location.reload();
                    }
                })
            })
            $(".removeVideo").click(function () {
                var id = $(this).siblings().attr('src');
                var val = $(this).attr('id');
                $(this).remove();
                $.ajax({
                    url: "/Node/RemoveVideo",
                    dataType: "html",
                    data: {
                        image: id,
                        val: val
                    },
                    success: function (data) {
                        window.location.reload();
                    }
                })
            })
