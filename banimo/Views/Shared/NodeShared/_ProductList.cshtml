                    <li style="cursor:pointer" class="pagingnumberforall"><a>@i</a></li>
                                            }
                    <li class="active"><a href="#">@activ</a></li>
                    @for (int i = activ + 1; i <= total; i++)
                                            {
                    <li style="cursor:pointer" class="pagingnumberforall"><a>@i</a></li>
                                            }

                </ul>

                                }

