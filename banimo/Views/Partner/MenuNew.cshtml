<script>

    $("#imageFileHolderAdd").on('change', function () {

        uploadImage("imageHolderAdd", "imageNameAdd", this)
    });
    $("#imageFileHolderEdit").on('change', function () {

        uploadImage("imageHolderEdit", "imageNameEdit", this)
