<body style="background-color: #666666;">

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form id="adminSingUp" method="post" action="/partner/CustomerLogin" class="login100-form validate-form">
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title p-b-43">
                        @Resources.res.LoginTitle
                    </span>


                    <div class="wrap-input100 " data-validate="Valid email is required: ex@abc.xyz">
                        <input id="login-urser" class="input100" type="text" name="phone">
                        <span class="focus-input100"></span>
                        <span class="label-input100">@Resources.res.Username</span>
                    </div>


                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input id="login-password" class="input100" type="password" name="pass">
                        <span class="focus-input100"></span>
                        <span class="label-input100">@Resources.res.password </span>
                    </div>

                    <div class="flex-sb-m w-full p-t-3 p-b-32">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                @Resources.res.rememberMe
                            </label>
                        </div>


                    </div>


                    <div class="container-login100-form-btn">
                        <p class="login100-form-btn" id="lgnsubmitt">
                            @Resources.res.login
                        </p>
                    </div>

