    <script>
        function dologin() {
            var ischecked;
            if ($("#rememberme").is(":checked")) {
                ischecked = "checked";
            }
            else {
                ischecked = "unchecked";
            }

            var Phone = $("#login-urser").val();
            var Pass = $("#login-password").val();




            if (Phone != "" & Pass != "") {
                $("#adminSingUp").submit();
                
            }
            else {
                toastr.options = {
                    "debug": false,
                    "positionClass": "toast-top-center",
                    "onclick": null,
                    "fadeIn": 300,
                    "fadeOut": 1000,
                    "timeOut": 8000,
                    "extendedTimeOut": 1000,


                }
                toastr.error("Fill all fields")


            }
        }
        $('body').keypress(function (e) {
            var key = e.which;
            if (key == 13)  // the enter key code
            {
                dologin();
                return false;
            }
        });

        document.getElementById("lgnsubmitt").onclick = function () {



            dologin();



        }
    </script>
