                        </div>

                        <script>
                            $("#addAccountVerify").click(function () {

                              
                                var typeID = $("#typeID").val();

                            
                                if (typeID == "1") {
                                    var title = $("#daramadTitle").val();
                                   
                                    if (title == "") {
                                        toastr.options = {
                                            "debug": false,
                                            "positionClass": "toast-top-center",
                                            "onclick": null,
                                            "fadeIn": 300,
                                            "fadeOut": 1000,
                                            "timeOut": 5000,
                                            "extendedTimeOut": 1000
                                        }
                                        toastr.error('تمامی موارد را کامل کنید')
                                    }
                                    else {
                                        $("#accountForm").submit();
                                    }
                                }
                                else if (typeID == "2") {
                                    var title = $("#hazineTitle").val();
                                    if (title == "") {
                                        toastr.options = {
                                            "debug": false,
                                            "positionClass": "toast-top-center",
                                            "onclick": null,
                                            "fadeIn": 300,
                                            "fadeOut": 1000,
                                            "timeOut": 5000,
                                            "extendedTimeOut": 1000
                                        }
                                        toastr.error('تمامی موارد را کامل کنید')
                                    }
                                }
                                else if (typeID == "3") {
                                    var title = $("#sandoghTitle").val();
                                    if (title == "") {
                                        toastr.options = {
                                            "debug": false,
                                            "positionClass": "toast-top-center",
                                            "onclick": null,
                                            "fadeIn": 300,
                                            "fadeOut": 1000,
                                            "timeOut": 5000,
                                            "extendedTimeOut": 1000
                                        }
                                        toastr.error('تمامی موارد را کامل کنید')
                                    }
                                }
                                else if (typeID == "4") {
                                    var title = $("#bankTitle").val();
                                    var shobe = $("#bankshobe").val();
                                    var shomare = $("#bankShomare").val();
                                    if (title == "" || shobe == "" || shomare == "") {
